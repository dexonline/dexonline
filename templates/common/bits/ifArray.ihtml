{* argument: $ifArray: array(InflectedForm) *}

{if count($ifArray) == 0}
  &mdash;
{else}
  {strip}
    {foreach from=$ifArray item=if key=i}
        {if $i}, {/if}
        {if $if->recommended === '0'}<span class="notRecommended" title="formă nerecomandată">{/if}
          {$if->form|regex_replace:"/\'(a|e|i|o|u|ă|î|â|y)/":"<span class=\"accented\">\$1</span>"}
        {if $if->recommended === '0'}*</span>{/if}
    {/foreach}
  {/strip}
{/if}
